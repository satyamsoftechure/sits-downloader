{
    "version": 2,
    "builds": [
      {
        "src": "sits_downloader/wsgi.py",
        "use": "@vercel/python",
        "config": {"maxLambdaSize": "15mb", "runtime": "python3.12"}
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
    ],
    "functions": {
        "api/**/*": {
          "includeFiles": "bin/ffmpeg"
        }
      },
      "scripts": {
        "postbuild": "./install_ffmpeg.sh"
      },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "sits_downloader/wsgi.py"
      },
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      }
    ]
  }
